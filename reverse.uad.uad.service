[Unit]
Description=Reverse SSH Tunnel to uad
ConditionPathExists=|/usr/bin
After=network.target

[Service]
User=uad
ExecStart=/usr/bin/ssh -NTC -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -o StrictHostKeyChecking=no -i ~/.ssh/reverse.uad.uad -R 12345:localhost:22 uad@128.19.50.73

# Restart every >2 seconds to avoid StartLimitInterval failure
RestartSec=3
Restart=always

[Install]
WantedBy=multi-user.target

